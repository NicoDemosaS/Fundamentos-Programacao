#include <stdio.h>

int main()
{
    int numero;
    printf("Primeiro Valor: ");
    scanf("%d", &numero);
    
   
    if(numero % 2 == 0)
        printf("Numero e PAR!");
    else
        printf("Numero e IMPAR!");
    if(numero < 0)
        printf("E NEGATIVO!");
    else
        printf("E POSITIVO!");
    return 0;
}
