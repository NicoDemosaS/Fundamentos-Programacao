    #include <stdio.h>
    #include <stdlib.h>
    #include <string.h>

    int main()
    {
       /* 8) Escrever um programa para ler o código de um determinado produto
                e mostrar sua descrição, utilize a tabela abaixo; */
      int codigo;

    scanf("%d", &codigo);
    switch(codigo)
    {
    case 1:
    printf("Banana");
    break;

    case 2:
    printf("Maca");
    break;

    case 3:
    printf("Laranja");
    break;

    case 4:
    printf("Abacate");
    break;

    case 5:
    printf("Melancia");
    break;

    case 6:
    printf("Abacaxi");
    break;

    default:
        printf("Codigo Invalido");
    }



       return 0;
    }
