    #include <stdio.h>
    #include <stdlib.h>
    #include <string.h>

    int main()
    {
        /* 3) Escrever um programa em C para ler trÃªs valores e escreve-los em
                    ordem crescente. */
        int num1, num2, num3, maior, medio;
        printf("Valor UM: ");
        scanf("%d", &num1);

        printf("Valor DOIS: ");
        scanf("%d", &num2);

        printf("Valor TRES: ");
        scanf("%d", &num3);

        if(num1 > num2 && num1 > num3)
        {
            maior = num1;
            if(num2 > num3){
                medio = num2;
                printf("%d %d %d", num3, medio, maior);
            }

            else{
                medio = num3;
                printf("%d %d %d", num2, medio, maior);
            }
        }
        if(num2 > num3 && num2 > num1)
        {
            maior = num2;
            if(num3 > num1){
                medio = num3;
                printf("%d %d %d", num1, medio, maior);
            }
            else{
                medio = num1;
                printf("%d %d %d", num3, medio, maior);
            }
        }
        if(num3 > num2 && num3 > num1)
        {
            maior = num3;
            if(num2 > num1){
                medio = num2;
                printf("%d %d %d", num1, medio, maior);
            }
            else{
                medio = num1;
                printf("%d %d %d", num2, medio, maior);
            }
        }

       return 0;
    }
