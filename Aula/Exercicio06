    #include <stdio.h>
    #include <stdlib.h>
    #include <string.h>

    int main()
    {
       /* 6) Escreva um programa em C para ler um número inteiro mostrar a
                mensagem se o número é par ou impar; */
    int num1;
    printf("Primeiro Numero: ");
    scanf("%d", &num1);

    if(num1 % 2 == 0)
    printf("%d PAR!!", num1);
    else
    printf("%d IMPAR!!", num1);


       return 0;
    }
