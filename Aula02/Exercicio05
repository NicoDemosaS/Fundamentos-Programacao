    #include <stdio.h>
    #include <stdlib.h>
    #include <math.h>

// NAO TA COMPLETO ARRUME!!!!!!!!!!!!

    int main()
    {
    float custo_lata, altura, raio, PI, area_base, area_total, comprimento, area_lateral;
    int quantidade_tinta, quantidade_lata;
    PI = 3.1415;
    custo_lata = 50;


    printf("Altura do Cilindro: ");
    scanf("%f", &altura);
    setbuf(stdin, NULL);
    printf("Raio do Cilindro: ");
    scanf("%f", &raio);
    setbuf(stdin, NULL);


    area_base = PI * raio * raio;
    area_lateral = 2 * PI * raio * altura;
    area_total = area_lateral + 2 * area_base;
// cada litro DE TINTA PINTA 3 METROS QUADRADOS
    printf("area total: %.2f metros quadrados", area_total);
    quantidade_tinta = area_total / 3;
    quantidade_lata = quantidade_tinta * 5;
    printf("\nQuantidade de Tinta: %d L", quantidade_tinta + 1);
    printf("\nCusto Total: %d REAIS", (quantidade_lata) * 50);

    return 0;
    }

