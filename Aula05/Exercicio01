    #include <stdio.h>
    #include <stdlib.h>
    #include <math.h>
    #include <conio.h>


    int main()
    {
        /*  1) Escreva um programa em C que leia um número inteiro de 1 a 7 e informe o dia
      da semana correspondente, sendo domingo o dia de número 1. Se o número
      não corresponder a um dia da semana, mostre uma mensagem de erro. */

    int numero_somar, resto;
    printf("Numero a somar nos dias:", numero_somar);
    scanf("%d", &numero_somar);
    
    resto = numero_somar % 7;

    switch (resto)
{
    case 0:
     printf("Segunda-Feira");
    break;

   case 1:
     printf("Terça-Feira");
   break;

   case 2:
     printf("Quarta-Feira");
   break;

   case 3:
     printf("Quinta-Feira");
   break;

   case 4:
     printf("Sexta-Feira");
   break;

   case 5:
     printf("Sabado");
    break;

    case 6:
     printf("Domingo");
    break;

  }
}
