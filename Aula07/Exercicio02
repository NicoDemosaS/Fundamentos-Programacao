#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#include <math.h>
#include <string.h>
int main()
{
              /* 2) Escreva um programa em C para ler as notas de 5 alunos (duas notas) calcular e
                    escrever a media de cada aluno e o conceito aprovado ou reprovado (media 7) e a
                    media dos alunos. */
   int i, media;
   float nota1, nota2;
   for(i=0; i<=5; i++){
    printf("Nota Um: ");
    scanf("%f", &nota1);
    printf("Nota Dois: ");
    scanf("%f", &nota2);
    media = (nota1 + nota2) / 2;
    if(media>=7)
        printf("Aprovado!\n");
    else
        printf("Reprovado\n");

   }



    return 0;
}
