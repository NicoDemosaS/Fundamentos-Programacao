    #include <stdio.h>
    #include <stdlib.h>
    #include <string.h>

    int main()
    {
            /* ) Escreva um programa em C para ler duas matrizes A e B cada uma com 5 linhas e 3 colunas. construir uma
    matriz C de mesma dimensão, que será formada pela soma dos elementos da matriz A com os elementos da
    matriz B, escrever a matriz C */
        int i, l, b;
        int A[5][3], B[5][3], C[5][3];
        // Leitura das matrizes

            // LER A
            for(i=0;i<5;i++)
            {
                for(l=0;l<3;l++)
                {
                    printf("A[%d][%d]", i, l);
                    scanf("%d", &A[i][l]);
                }
            }

            // LER B
            for(i=0;i<5;i++)
            {
                for(l=0;l<3;l++)
                {
                    printf("B[%d][%d]", i, l);
                    scanf("%d", &B[i][l]);
                    //printf(" C : [%d] ", A[i][l] + B[i][l]);
                }


            }



            // Printar C

            for(i=0;i<5;i++)
            {
                printf("\n");
                for(l=0;l<3;l++)
                    printf("[%d] ", A[i][l] + B[i][l]);
            }



       return 0;
    }
