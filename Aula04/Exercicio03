#include <stdio.h>
#include <stdlib.h>

int main()
{
        /*1) 3) Escrever um programa para ler um número inteiro e informar se ele é divisível
                    por 3 e por 7. */

    int numero;
    printf("Digite um Numero: ");
    scanf("%d", &numero);
    if (numero % 7 == 0 && numero % 3 == 0)
        printf(" %d Divisivel por 3 e 7", numero);



}
